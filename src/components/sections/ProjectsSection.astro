---
import ProjectCard from "../ProjectCard.astro";
---

<section class="projects" id="projects">
    <div class="grid">
        <ProjectCard
            title="Mums Filibabba"
            description="An ongoing recipe website project to collect and share recipes of friends and family."
            techStack={["mongoose", "express", "React", "Node.js", "CSS"]}
            cardColor="#B6D494"
            githubUrl="https://github.com/Snoira/recept_webpage"
        />
        <ProjectCard
            title="YAY BNB"
            description="A modern Airbnb-inspired booking platform with responsive design and TypeScript for enhanced type safety."
            techStack={[
                "Next.js",
                "TypeScript",
                "Prisma",
                "TailwindCSS",
                "Shadcn UI",
            ]}
            githubUrl="https://github.com/Snoira/Airbnb-project"
            cardColor="#CEDAED"
        />
        <ProjectCard
            title="Portfolio Website"
            description="A personal portfolio built with Astro for showcasing my work."
            techStack={["Astro", "CSS", "TypeScript", "Netlify"]}
            cardColor="#FC7753"
            githubUrl="https://github.com/Snoira/webdev-portfolio"
        />
    </div>
</section>

<style>
    .projects {
        position: static;
    }

    .grid {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
        justify-content: center;
        align-items: center;
        position: static;
    }

</style>
