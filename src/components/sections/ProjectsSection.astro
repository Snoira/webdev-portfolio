---
import ProjectCard from "../ProjectCard.astro";

const projects: MarkdownInstance<ProjectFrontmatter>[] = Object.values(
    import.meta.glob("../../projects/*.md", {
        eager: true,
    }),
);

---

<section class="projects" id="projects">
    <h2>My Projects</h2>
    <div class="grid scroll-reveal">
        {
            projects.map((project) => (
                <ProjectCard {...project.frontmatter} />
            ))
        }
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    gsap.registerPlugin(ScrollTrigger);

    function cardTimeLine(selector: string) {
        const tl = gsap.timeline({
            scrollTrigger: {
                trigger: selector,
                start: "top 80%",
                end: "bottom 20%",
                toggleActions: "play none none reverse",
            },
        });
        tl.from(selector, {
            y: 50,
            rotation: -10,
            autoAlpha: 0,
            stagger: 0.2,
        });

        return tl;
    }

    document.fonts.ready.then(() => {
        cardTimeLine(".grid > article:nth-child(1)");
        cardTimeLine(".grid > article:nth-child(2)");
        cardTimeLine(".grid > article:nth-child(3)");
        cardTimeLine(".grid > article:nth-child(4)");
    });
</script>

<style>
    .projects {
        padding: none;
    }

    h2 {
        text-align: center;
        font-size: clamp(2rem, 6cqw, 3rem);
        margin-bottom: 3rem;
    }

    .grid {
        padding: none;
        display: grid;
        justify-items: center;
        gap: 2rem;
        overflow: hidden;
    }
</style>
