---
import IconLink from "./ui/IconLink.astro";

interface Props extends ProjectFrontmatter {}

const { title, description, techStack, githubUrl, websiteUrl } = Astro.props;
---

<article>
    <div class="inner-card">
        <div class="content">
            <h1>{title}</h1>
            <p>{description}</p>
            <ul class="tech-stack">
                <p>tech stack:</p>
                {
                    Array.isArray(techStack) ? (
                        techStack.map((tech) => <li>{tech}</li>)
                    ) : (
                        <li>{techStack}</li>
                    )
                }
            </ul>
        </div>
        <div class="links">
            {
                githubUrl && (
                    <IconLink icon="github" url={githubUrl} size="small" />
                )
            }
            {
                websiteUrl && (
                    <a
                        href={websiteUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="project-link"
                    >
                        Visit website
                        <svg
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            fill="none"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M 9,6 S 15,10.4 15,12 S 15,13.6 9,18 "
                            />
                        </svg>
                    </a>
                )
            }
        </div>
    </div>
</article>

<style>
    article {
        container: card / inline-size;
        display: block;
        width: 95%;
        border-radius: 8px;
        background-color: transparent;
        border: 1px solid rgba(0, 0, 0, 0.1);
        background-color: #b6d494;
        max-width: 1000px;
    }

    .inner-card {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 1.5rem;
    }

    .content {
        flex: 1;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        padding: 0.5rem 1rem;
    }
    h1 {
        margin-bottom: 0.5rem;
        font-size: clamp(1.5rem, 6cqw, 2rem);
    }
    p {
        font-size: clamp(0.9rem, 3cqw, 1rem);
    }
    .tech-stack {
        margin-top: 1rem;
        list-style: none;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.5rem;
        & p {
            margin-right: 0.5rem;
            font-weight: bold;
        }
        & li {
            background: rgba(0, 0, 0, 0.1);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: clamp(0.9rem, 4cqw, 1rem);
        }
    }

    .links {
        margin-top: 1rem;
        padding: 0 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        gap: 1rem;
    }

    .project-link {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        text-decoration: none;
        color: inherit;
        font-size: clamp(0.8rem, 3.7cqw, 1rem);
        font-weight: bold;
        transition: transform 0.2s ease;
        &:hover {
            transform: translateY(-2px);
            text-decoration: underline;
        }
    }

    @container card (max-width: 350px) {
        .inner-card {
            padding: 1rem 0.5rem;
        }
        .content {
            padding: 1rem;
        }
    }
</style>
