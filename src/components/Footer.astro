---
import IconLink from "./ui/IconLink.astro";
---
<footer>
    <div class="footer-content">
        <p>&copy; {new Date().getFullYear()} Nora Velde. All rights reserved.</p>
        <div class="social-links">
            <IconLink icon="github" url="https://github.com/noravelde" />
            <IconLink icon="linkedin" url="https://www.linkedin.com/in/noravelde/" />
        </div>
    </div>
</footer>

<style>
    footer {
        background-color: var(--background);
        border-top: 1px solid #ccc;
        padding: 1rem 0;
        text-align: center;
        font-size: 0.9rem;
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }
</style>