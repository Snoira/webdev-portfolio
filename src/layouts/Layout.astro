---
import "@fontsource/libre-baskerville/400.css";
import "@fontsource/libre-franklin/400.css";
import "@fontsource/libre-franklin/700.css";
import "@fontsource/libre-franklin/900.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/plein.css";
import "../styles/switzer.css";

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	html,
	body {
		width: 100%;
		min-height: 100%;
		/* --text: #2b323f; */
		--text: #0B0D1B;
		--background: #FDF7EC;
		background: var(--background);
		color: var(--text);
		font-family: "Switzer", Arial, Helvetica, sans-serif;
	}

	* {
		/* outline: 10px solid green; */
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	h1, h2 {
		font-family: "Plein-Bold", Arial, Helvetica, sans-serif;
	}
	h2 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		/* i {
			font-family: "Plein-LightItalic", Arial, Helvetica, sans-serif;
		} */

	}
	p {
		font-size: clamp(1rem, 2vw, 1.5rem);
		font-size: 1rem;
		line-height: 1.5;
	}

	body.no-scroll {
		overflow: hidden;
		position: fixed;
		width: 100%;
	}
</style>
