<style>
	html,
	body {
		width: 100%;
		min-height: 100%;
	}		
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	body {
		display: flex;
		flex-direction: column;
	}	
	main {
		flex: 1;
	}
	.hero-content {
		display: grid;
		justify-content: center;
		& h1 {
			font-size: 4rem;
		}
		& p {
			font-size: 2.5rem;
			max-width: 960px;
		}
		& .socials {
			justify-self: flex-end;
			display: flex;
			flex-direction: column;
			gap: 1rem;
			& svg {
				width: 3rem;
				height: 3rem;
				cursor: pointer;
				transition: transform 0.3s ease;
				&:hover {
					transform: scale(1.2);
				}
			}
		}
	}

	section.hero {
		height: 80dvh;
		display: grid;
		place-items: center;
		padding: 0 5rem;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.card {
		aspect-ratio: 1 / 1;
		display: flex;
		flex-direction: column;
		justify-content: flex-end;
		align-items: flex-start;
		gap: 1rem;
		padding: 2rem;
		box-shadow: 0 0px 3px rgba(0, 0, 0, 0.1);
		transition:
			transform 0.3s ease,
			box-shadow 0.3s ease;
		cursor: pointer;
		background-color: var(--bg-color, #ffffff);
		&:hover {
			transform: translateY(-5px);
			box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
		}
		& h3 {
			margin: 0;
			font-size: 1.5rem;
		}
		& p {
			font-size: 1rem;
			color: #555;
		}
	}

	.projects {
		background-color: #fafafa;
		& h2 {
			font-size: 2.5rem;
			margin-bottom: 2rem;
		}
	}

	.about {
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 2rem;
		max-width: 1000px;
		margin: 0 auto;
		& .about-text {
			& h2 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
			}
			& p {
				font-size: 1.2rem;
				color: #555;
			}
		}
		& .about-image {
			& .placeholder {
				border-radius: 8px;
				background-color: #ccc;
				width: 100%;
				height: 300px;
			}
		}
	}

	.contact {
		display: grid;
		justify-items: center;
		max-width: 800px;
		margin: 0 auto;
		& h2 {
			font-size: 2.5rem;
			margin-bottom: 1rem;
		}
		& p {
			font-size: 1.2rem;
			color: #555;
		}
		& .contact-form {
			display: grid;
			gap: 1rem;
			margin-top: 2rem;
			max-width: 600px;
			width: 100%;
			margin-bottom: 5rem;
			& button {
				padding: 0.75rem 1.5rem;
				background-color: #007bff;
				color: white;
				border: none;
				border-radius: 4px;
				cursor: pointer;
				transition: background-color 0.3s ease;
				&:hover {
					background-color: #0056b3;
				}
			}
			& div {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				& label {
					font-weight: bold;
				}
				& input,
				& textarea {
					width: 100%;
					padding: 0.75rem;
					border: 1px solid #ccc;
					border-radius: 4px;
					font-size: 1rem;
					resize: vertical;
				}
			}
		}
	}

	section {
		padding: 4rem 5rem;
	}
</style>
