---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import AboutSection from "../components/sections/AboutSection.astro";
import ProjectCard from "../components/ProjectCard.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout />
<Header />
<main>
	<HeroSection />
	<section class="projects" id="projects">
		<h2>Projects</h2>
		<div class="grid">
			<ProjectCard
				title="Mums Filibabba"
				description="An ongoing recipe website project to collect and share recipes of friends and family."
				techStack="MERN stack, JavaScript, CSS. Formik + yup for form handling and validation. Axios and React Query for API requests and state management. Bcrypt and Jsonwebtoken for authentication."
				cardColor="#DFF2A7"
				githubUrl="https://github.com/Snoira/recept_webpage"
			/>
			<ProjectCard
				title="YAY BNB"
				description="A modern Airbnb-inspired booking platform with responsive design and TypeScript for enhanced type safety."
				techStack="Next.js, TypeScript, TailwindCSS + Shadcn UI. Utilizes Prisma for database management. Zod for type validation."
				githubUrl="https://github.com/Snoira/Airbnb-project"
			/>
			<ProjectCard
				title="Portfolio Website"
				description="A personal portfolio built with Astro for showcasing my work."
				techStack="Astro, CSS, TypeScript, Netlify."
				cardColor="#EA8C55"
				githubUrl="https://github.com/Snoira/webdev-portfolio"
			/>
		</div>
	</section>
	<AboutSection />
	<section class="contact" id="contact">
		<h2>Contact Me</h2>
		<p>
			Feel free to reach out if you have any questions or would like to
			connect!
		</p>
		<form
			class="contact-form"
			name="contact"
			method="POST"
			data-netlify="true"
		>
			<div>
				<label for="name">Name:</label>
				<input type="text" id="name" name="name" required />
			</div>
			<div>
				<label for="email">Email:</label>
				<input type="email" id="email" name="email" required />
			</div>
			<div>
				<label for="message">Message:</label>
				<textarea id="message" name="message" required></textarea>
			</div>
			<button type="submit">Send</button>
		</form>
	</section>
</main>

<style>

	

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		margin-top: 2rem;
		justify-content: center;
	}

	.projects {
		background-color: #fafafa;
		padding: 2rem 0;
		& h2 {
			padding-left: 2rem;
		}
	}

	.contact {
		display: grid;
		justify-items: center;
		background-color: #e4eeff;
		& .contact-form {
			display: grid;
			gap: 1rem;
			width: 100%;
			max-width: 600px;
			margin-top: 2rem;
			margin-bottom: 5rem;
			& button {
				padding: 1rem 2rem;
				background-color: var(--black);
				color: var(--white);
				border: none;
				border-radius: 4px;
				cursor: pointer;
				transition: background-color 0.3s ease;
				font-size: 1rem;
				&:hover {
					background-color: #0056b3;
				}
			}
			& div {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				& label {
					font-weight: bold;
					text-transform: uppercase;
				}
				& input,
				& textarea {
					width: 100%;
					padding: 0.75rem;
					border: 1px solid #ccc;
					border-radius: 4px;
					font-size: 1rem;
					resize: vertical;
				}
			}
		}
	}

	@media screen and (min-width: 700px) {
		h2 {
			font-size: clamp(1.6rem, 4vw, 2rem);
		}
		p {
			font-size: clamp(1rem, 2vw, 1.25rem);
			line-height: 1.6;
		}
		.hero-content {
			padding: 0 1rem;
			& h1 {
				font-size: clamp(3rem, 5vw, 4rem);
			}
			& p {
				font-size: clamp(1.9rem, 3vw, 2.5rem);
			}
			& .socials {
				gap: 1rem;
				& svg {
					width: 3rem;
					height: 3rem;
				}
			}
		}

		section,
		.projects {
			padding: 4rem 5rem;
			max-width: calc(1500px + 10rem);
			margin: 0 auto;
		}
	}
</style>
